.cateList .swiper {
  height: 360rpx;
}
.cateList .swiper image {
  width: 100%;
  height: 360rpx;
}
.cateList .title {
  font-size: 40rpx;
  line-height: 80rpx;
  color: #333;
  text-align: center;
}
.cateList .desc {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #666;
  text-align: center;
}
.cateList .goodsList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.cateList .goodsList::after {
  content: "";
  width: 344rpx;
}
.cateList .goodsList .goodsItem {
  width: 344rpx;
  height: 480rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
}
.cateList .goodsList .goodsItem .goodsImg {
  width: 344rpx;
  height: 344rpx;
}
.cateList .goodsList .goodsItem .goodsDesc {
  font-weight: 600;
}
.cateList .goodsList .goodsItem .goodsPrice {
  color: #a61b29;
  font-size: 42rpx;
  font-weight: 600;
}

