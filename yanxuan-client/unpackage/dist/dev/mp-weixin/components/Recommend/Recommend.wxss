.recommend {
  margin-top: 5rpx;
}
.recommend .swiper {
  height: 350rpx;
}
.recommend .swiper image {
  width: 100%;
  height: 350rpx;
}
.recommend .policyList {
  display: flex;
  margin: 10rpx;
}
.recommend .policyList .policyItem {
  flex: 1;
  text-align: center;
}
.recommend .policyList .policyItem image {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}
.recommend .policyList .policyItem .desc {
  font-size: 26rpx;
}
.recommend .kingKongList {
  display: flex;
  flex-wrap: wrap;
}
.recommend .kingKongList .kingKongItem {
  width: 20%;
  text-align: center;
  margin: 10rpx 0;
}
.recommend .kingKongList .kingKongItem .kingKongImg {
  height: 100rpx;
  width: 100rpx;
}
.recommend .kingKongList .kingKongItem .kingKongDesc {
  font-size: 24rpx;
}
.recommend .categoryList .categoryItem {
  margin: 10rpx 0;
}
.recommend .categoryList .categoryItem .categoryImg {
  width: 100%;
  height: 370rpx;
}
.recommend .categoryList .categoryItem .categoryScroll {
  height: 300rpx;
  display: flex;
  white-space: nowrap;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem {
  height: 300rpx;
  margin: 0 5rpx;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem .goodsImg {
  height: 200rpx;
  width: 200rpx;
  background-color: #f5f5f5;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem .goodsText {
  font-size: 26rpx;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

