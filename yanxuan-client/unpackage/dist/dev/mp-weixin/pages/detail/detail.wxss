.detail .header {
  height: 90rpx;
  width: 570rpx;
  line-height: 90rpx;
  margin: 0 auto;
  text-align: center;
}
.detail .detailScroll {
  height: calc(100vh - 90rpx);
}
.detail .detailScroll .detailImg {
  width: 100%;
  height: 750rpx;
}
.detail .detailScroll .tag {
  width: 90%;
  height: 100rpx;
  background-color: #bb2c08;
  margin: 20rpx auto;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  line-height: 100rpx;
}
.detail .detailScroll .price {
  font-size: 50rpx;
  color: #dd1a21;
  line-height: 70rpx;
  margin-left: 5%;
}
.detail .footer {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #ccc;
}
.detail .footer image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 40rpx;
}
.detail .footer .btn {
  flex: 2;
  border-left: 1px solid #ccc;
  text-align: center;
}
.detail .footer .btn.cart {
  background-color: #dd1a21;
  color: #fff;
}

