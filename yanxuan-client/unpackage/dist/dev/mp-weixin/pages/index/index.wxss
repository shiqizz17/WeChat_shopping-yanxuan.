.indexContainer .header {
  display: flex;
  padding: 10rpx 5rpx;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.indexContainer .header .search {
  position: relative;
  width: 420rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  font-size: 50rpx;
}
.indexContainer .header .search input {
  width: 360rpx;
  height: 60rpx;
  margin-left: 60rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  height: 36rpx;
  padding: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 6rpx solid #bb2c08;
  color: #bb2c08;
}
.test {
  color: #f00;
}

